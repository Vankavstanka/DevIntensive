<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_mediall_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_mediall_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_mediall_24</item>
    </style>
    
    <style name="data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        
    </style>

    <style name="head">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/white</item>
     </style>

    <style name="head.on" parent="head">
        <item name="android:gravity">bottom|center</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="head.un" parent="head">
        <item name="android:gravity">top|center</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
    </style>



</resources>
