<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.MainActivity">

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="horizontal"
        android:background="@color/grey"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical"
            >

            <TextView
               style="@style/head.on"
               android:text="0"
                />

            <TextView
                style="@style/head.un"
                android:text="Рейтинг"
                />

        </LinearLayout>

        <View
            android:layout_width="@dimen/line_size"
            android:layout_height="match_parent"
            android:background="@color/grey_light"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:layout_marginBottom="@dimen/spacing_normal_16"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            >

            <TextView
                style="@style/head.on"
                android:text="0"
                />

            <TextView
                style="@style/head.un"
                android:text="Написано строк кода"
                />

        </LinearLayout>

        <View
            android:layout_width="@dimen/line_size"
            android:layout_height="match_parent"
            android:background="@color/grey_light"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:layout_marginBottom="@dimen/spacing_normal_16"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical"
            >

            <TextView
                style="@style/head.on"
                android:text="0"
                />

            <TextView
                style="@style/head.un"
                android:text="Проектов"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8"

        >
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_call_black_24dp"
            />

       <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/size_large_72"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            
            <EditText
                style="@style/data"
                android:id="@+id/phone_et"
                android:hint="Мобильный телефон"
                android:inputType="phone"
                android:text="+7 495 648-58-05"
                android:enabled="false"
                android:focusable="false"
                />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_phone_in_talk_black_24dp"
            />
        
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_little_2"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8"
        >
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_email_black_24dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/size_large_72"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    style="@style/data"
                    android:id="@+id/email_et"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:text="vankavstanka73@mail.ru"
                    android:enabled="false"
                    android:focusable="false"
                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_send_black_24dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_little_2"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8"
        >
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_vk_all_black_24dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/size_large_72"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    style="@style/data"
                    android:id="@+id/profile_et"
                    android:hint="Профиль в VK"
                    android:inputType="text"
                    android:text="vk.com/ruzavin_dmitry"
                    android:enabled="false"
                    android:focusable="false"
                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_visibility_black_24dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_little_2"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8"
        >

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_github_black_24dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/size_large_72"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    style="@style/data"
                    android:id="@+id/rep_et"
                    android:hint="Репозиторий"
                    android:inputType="text"
                    android:text="github.com/Vankavstanka"
                    android:enabled="false"
                    android:focusable="false"
                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_visibility_black_24dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_little_2"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8"
        >

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_account_box_black_24dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    style="@style/data"
                    android:id="@+id/biog_et"
                    android:hint="О себе"
                    android:text="@string/me"
                    android:enabled="false"
                    android:focusable="false"
                     />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_little_2"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"
        />


    </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
